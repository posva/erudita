{
  "name": "vite-erudita",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.10.0",
  "description": "A Vite plugin that runs an MCP server to retrieve and cache docs from your dependencies, giving LLMs up-to-date knowledge of the packages they need to use.",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Eduardo San Martin Morote",
    "email": "posva13@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/posva/vite-erudita#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/posva/vite-erudita.git"
  },
  "bugs": {
    "url": "https://github.com/posva/vite-erudita/issues"
  },
  "keywords": [
    "vite",
    "plugin",
    "mcp",
    "llm",
    "documentation",
    "dependencies",
    "cache"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "pnpm -r build",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "mcp:start": "node packages/mcp-server/dist/cli.js"
  },
  "devDependencies": {
    "@types/node": "^22.15.12",
    "eslint": "^9.26.0",
    "tsdown": "^0.11.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vite": "^6.3.5",
    "vite-plugin-mcp": "^0.1.2",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "@vite-erudita/mcp-server": "workspace:>=*"
  }
}
